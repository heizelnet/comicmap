<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#171717</item>
        <item name="android:textSize">20sp</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="actionButtonStyle">@style/myActionButtonStyle</item>
        <item name="colorControlActivated">#009688</item>
        <item name="colorControlNormal">#171717</item>
    </style>
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">48dp</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="ExplodeAnimation">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/dialog_open</item>
        <item name="android:windowExitAnimation">@anim/dialog_close</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/gray2</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/nicokaku</item>
        <item name="android:textColor">@color/whiteTextColor</item>
    </style>


</resources>
